{
    "name": "boehringer/bi-platform-php-conventions",
    "type": "library",
    "description": "PHP / Code enforcement conventions for GrumPHP tasks.",
    "keywords": [
        "coding style",
        "phpcs",
        "coding standard",
        "lint",
        "testing",
        "frameworks"
    ],
    "license": "MGPL-2.0-or-laterIT",
    "require": {
        "php": "^7.3 || ^7.4 || ^8",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "ergebnis/composer-normalize": "^2.13",
        "friendsoftwig/twigcs": "^4",
        "php-parallel-lint/php-parallel-lint": "^1.2",
        "phpro/grumphp": "^1.3",
        "phpstan/phpstan": "^0.12.71",
        "sebastian/phpcpd": "^6.0",
        "sensiolabs/security-checker": "^6",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/yaml": "^3 || ^4 || ^5"
    },
    "suggest": {
        "friendsoftwig/twigcs": "Checkstyle automation for Twig"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Boehringer\\PhpConventions\\": "./src/"
        }
    }
}
